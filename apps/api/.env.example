# API environment variables (copy to .env and fill values)
NODE_ENV=development
PORT=3002

# PostgreSQL connection (Supabase or Railway)
DATABASE_URL=postgresql://user:password@host:5432/pgp

# Auth
JWT_SECRET=replace-with-strong-secret
SUPABASE_JWKS_URL=https://YOUR-PROJECT.supabase.co/auth/v1/keys
# Optional hardening (set if you want to enforce):
# SUPABASE_ISSUER=https://YOUR-PROJECT.supabase.co/auth/v1
# SUPABASE_AUDIENCE=authenticated

# Providers
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Storage (required for profile photo upload)
# Service Role Key from Supabase (DO NOT expose on client)
SUPABASE_SERVICE_ROLE_KEY=
# Bucket name in Supabase Storage (must exist and be public)
SUPABASE_PHOTOS_BUCKET=profile-photos
