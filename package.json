{
  "name": "pgp-pwa",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev": "npm-run-all -p dev:web dev:api",
    "build": "npm --workspace apps/web run build && npm --workspace apps/api run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
